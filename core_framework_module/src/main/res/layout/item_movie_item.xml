<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/sx10">

    <ImageView
        android:id="@+id/lmi_avatar"
        android:layout_width="@dimen/sx80"
        android:layout_height="@dimen/sx100"
        android:layout_marginEnd="@dimen/sx10"
        android:layout_marginRight="@dimen/sx10"
        android:contentDescription="@string/app_name"
        tools:background="#fff0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lmi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sx5"
            android:minWidth="@dimen/sx200"
            android:textColor="@color/common_color_333333"
            android:textSize="@dimen/sx17"
            tools:background="#fff0f0f0" />

        <TextView
            android:id="@+id/lmi_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sx5"
            android:gravity="center_vertical"
            android:minWidth="@dimen/sx50"
            android:singleLine="true"
            android:textColor="@color/common_color_444444"
            android:textSize="@dimen/sx14"
            tools:background="#fff0f0f0" />

        <TextView
            android:id="@+id/lmi_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sx5"
            android:gravity="center_vertical"
            android:minWidth="@dimen/sx100"
            android:singleLine="true"
            android:textColor="@color/common_color_444444"
            android:textSize="@dimen/sx14"
            tools:background="#fff0f0f0" />

        <TextView
            android:id="@+id/lmi_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sx5"
            android:gravity="center_vertical"
            android:minWidth="@dimen/sx100"
            android:singleLine="true"
            android:textColor="@color/common_color_444444"
            android:textSize="@dimen/sx14"
            tools:background="#fff0f0f0" />
    </LinearLayout>

</LinearLayout>

